rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.uid == 'qvmT6LVfsTO4sP2IS1iFigY0tss1';
    }

    // --- Public Read, Admin Write ---
    
    // Published Curriculum (Client reads this)
    match /published_curriculum/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Atomic Vocab (Admin reads/writes this)
    match /vocab/{document=**} {
      allow read, write: if isAdmin();
    }

    // --- User Data ---
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Legacy/Other collections
    match /curriculum/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
